generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id            Int       @id @default(autoincrement())
  title         String
  description   String?
  dueDate       DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  priority      Priority
  status        Status
  creator       User      @relation("CreatedBy", fields: [creatorId], references: [id])
  creatorId     String
  responsible   User      @relation("ResponsibleFor", fields: [responsibleId], references: [id])
  responsibleId String

  @@map("tasks")
}

model User {
  id               String  @id @unique @default(uuid())
  firstName        String
  role             Role
  lastName         String
  middleName       String?
  username         String  @unique
  password         String
  createdTasks     Task[]  @relation("CreatedBy")
  responsibleTasks Task[]  @relation("ResponsibleFor")

  managerId        String?
  manager          User?     @relation("Subordinates", fields: [managerId], references: [id])
  subordinates     User[]    @relation("Subordinates")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum Priority {
  HIGH
  MEDIUM
  LOW
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
  CANCELED
}

enum Role {
  USER
  ADMIN
}
